/*
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
     Config to store EBI's Codon cluster specifics
    ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/
// On a successful completion of a run all files in work directory are automatically deleted.
cleanup = true

process {
    withName: ALIGNMENT_DECONTAMINATION {
        cpus = 16
        memory     = { 50.GB * task.attempt }
        maxRetries    = 3
    }
    withName: CHECKM2 {
        cpus = 8;
        memory = { 100.GB * task.attempt }
    }
    withName: DREP {
        cpus = 32
    }
    withName: INDEX_FASTA {
        cpus = 16
    }
    withName: GTDBTK {
        cpus = 32
        memory = { 300.GB * task.attempt }
    }
    withName: GZIP {
        cpus = 16
    }

    withName: MULTIQC {
        cpus   = { 1 * task.attempt }
        memory = { 12.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
}

/********************************************/
/**       EMBL-EBI Fire S3 settings       **/
/********************************************/
aws {
    client {
        anonymous = true
        endpoint = 'https://hl.fire.sdo.ebi.ac.uk'
        s3PathStyleAccess = true
        signerOverride = "S3SignerType"
    }
}