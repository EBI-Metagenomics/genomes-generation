{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/ebi-metagenomics/genomes-generation/master/assets/schema_input.json",
    "title": "ebi-metagenomics/genomes-generation pipeline",
    "description": "Schema for the file provided with params.input",
    "type": "array",
        "items": {
        "type": "object",
        "properties": {
            "id": {
              "type": "string",
              "errorMessage": "Prefix, used for the file names (raw reads accession)",
              "meta": ["id"]
            },
            "fastq_1": {
              "type": "string",
              "pattern": "^\\S+\\.(fastq|fq|fq.gz|fastq.gz)$",
              "errorMessage": "The raw reads file needs to be a fastq file."
            },
            "fastq_2": {
              "type": "string",
              "pattern": "^\\S+\\.(fastq|fq|fq.gz|fastq.gz)$",
              "errorMessage": "The raw reads file needs to be a fastq file."
            },
            "assembly_accession": {
              "type": "string",
              "errorMessage": "Assembly accession (ERZ)",
              "meta": ["assembly_accession"]
            },
            "assembly_fasta": {
              "type": "string",
              "pattern": "^\\S+\\.(fa.gz|fasta.gz)$",
              "errorMessage": "The assembly needs to be a fasta file."
            },
            "assembler": {
              "type": "string",
              "default": null,
              "description": "Tool that was used to perform assembly in format: Tool_vVersion",
              "meta": ["assembler"]
            },
            "concoct_bins": {
              "type": "string",
              "default": null,
              "description": "Folder of pre-generated concoct bins"
            },
            "metabat_bins": {
              "type": "string",
              "default": null,
              "description": "Folder of pre-generated metabat bins"
            },
            "maxbins_bins": {
              "type": "string",
              "default": null,
              "description": "Folder of pre-generated metabat bins"
            },
            "jgi_depth": {
              "type": "string",
              "default": null,
              "description": "coverage depth calculated with jgi tool"
            }
        },
        "required": ["id", "fastq_1", "assembly_accession", "assembly_fasta"]
        }
}
